
{% extends "template.twig" %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                {% include "menu.twig" %}          
            </div>
            <div class="col-10">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">Alunos</li>
                    </ol>
                </nav>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <a href="/students/add" class="btn btn-primary" style="float:right;margin-top:10px;">
                                Cadastrar Aluno
                            </a>                 
                        </div>
                        <form action="/students" class="form-inline" method="post">
                            <div class="form-group mb-2">
                                
                            </div>
                            <div class="form-group mx-sm-3 mb-2">
                                <label for="search" class="sr-only">Procurar</label>
                                <input type="text" value="{{ search_value }}" class="form-control" id="search" name="search" placeholder="Digite para procurar">
                            </div>
                            <button type="submit" class="btn btn-primary mb-2">Procurar</button>
                        </form>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col">Registro AcadÃªmico</th>
                                <th scope="col">Nome</th>
                                <th scope="col">E-mail</th>
                                <th scope="col">CPF</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for user in data %}
                                    <tr>
                                        <td>
                                            {{user.ar}}
                                        </td>
                                        <td>{{user.name}}</td>
                                        <td>{{user.email}}</td>
                                        <td>{{user.document}}</td>
                                        <td>
                                            <a href="/students/remove/{{user.id}}" class="btn btn-sm btn-primary">
                                                Excluir
                                            </a>
                                            <a href="/students/edit/{{user.id}}" class="btn btn-sm btn-primary" style="margin-right: 5px;">
                                                Editar
                                            </a>
                                        </td>
                                    </tr>   
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

